{% extends "@User/Default/index.html.twig" %}
{% block slide %}
    <div class="inner_page-banner one-img">
    </div>
    <div class="using-border py-3">
        <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
                <li>
                    <a href="{{ path('user_homepage') }}">Index</a>
                    <span>/</span>
                </li>
                <li>Modifier un ev√©nement</li>
            </ul>
        </div>
    </div>

{% endblock %}

{% block body %}
    <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
        <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Mise a jour !</h3>
        <div class="contact-list-grid">
            <form action="#" method="post">
                <div class=" agile-wls-contact-mid">
                    <div class="form-group contact-forms">
                        {{ form_widget(form.nomEvent,{'attr':{'class':'form-control','placeholder':"Saisir le nom de l'evenement" }}) }}
                        {{ form_errors(form.nomEvent) }}
                    </div>
                    <div class="form-group contact-forms">
                        {{ form_widget(form.file) }}
                        {{ form_errors(form.file) }}
                    </div>

                    <div class="form-group contact-forms">
                        {{ form_widget(form.adresse,{'attr':{'class':'form-control','placeholder':"Saisir l'adresse" }}) }}
                        {{ form_errors(form.adresse) }}
                    </div>

                    <div class="form-group contact-forms">
                        {{ form_widget(form.description,{'attr':{'class':'form-control','placeholder':"Saisir la description" }}) }}
                        {{ form_errors(form.description) }}
                    </div>
                    <div class="form-group contact-forms">
                        {{ form_widget(form.date) }}
                        {{ form_errors(form.date) }}
                    </div>
                    <div class="form-group contact-forms">
                        {{ form_widget(form.heure) }}
                        {{ form_errors(form.heure) }}
                    </div>


                    <button type="submit" id="bt" class="btn btn-block sent-butnn" onclick="if(document.getElementById('cpt').value<0){alert('hello no negatives');return false;}" >Modifier !</button>

                </div>
            </form>
            {{ form_end(form) }}
        </div>

    </div>


{% endblock %}
{% block login %}
    <div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
            <a href="{{ path('fos_user_security_logout') }}">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>

        {% endif %}
    </div>

    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div>
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
{% endblock %}